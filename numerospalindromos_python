def es_palindromo(numero):
    numero_str = str(numero)
    return numero_str == numero_str[::-1]

def main():
    numero = int(input("Ingrese un número: "))

    if es_palindromo(numero):
        print(f"{numero} es un palíndromo.")
    else:
        print(f"{numero} no es un palíndromo.")

if _name_ == "_main_":
    main()